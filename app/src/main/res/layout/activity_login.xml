<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.loginRegister.LoginActivity"
        android:background="@drawable/login_screen_gradiant">


    <LinearLayout android:layout_width="@dimen/activity_login_container_width"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginTop="@dimen/activity_login_container_margin_top"
                  android:layout_marginBottom="@dimen/activity_login_container_margin_bottom"
                  android:layout_gravity="center_horizontal"
                  android:gravity="center_horizontal">

        <ImageView android:src="@drawable/login_icon2"
                   android:layout_width="@dimen/activity_login_icon_width"
                   android:layout_height="@dimen/activity_login_icon_height"
                   android:layout_margin="@dimen/activity_login_icon_margin"/>


        <!-- add login / register fragment -->
        <FrameLayout
                android:id="@+id/login_register_fragment_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



    </LinearLayout>

</ScrollView>
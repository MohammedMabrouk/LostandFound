<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/comment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp">

    <TextView
            android:id="@+id/comment_owner_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ahmed Abbas"
            android:padding="4dp"
            android:textColor="@color/primaryColor"
            android:textSize="16sp"/>

    <TextView
            android:id="@+id/comment_text_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment_owner_name_tv"
            android:text="@string/temp_string_en_small_paragraph"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"/>
    <LinearLayout
            android:id="@+id/like_dislike_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/comment_text_tv"
            android:layout_marginTop="4dp"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical">
        <TextView
                android:id="@+id/num_likes_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_margin="4dp"/>

        <ImageView
                android:id="@+id/like_iv"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_margin="4dp"
                android:src="@drawable/ic_like"/>

        <TextView
                android:id="@+id/num_dislikes_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_margin="4dp"/>

        <ImageView
                android:id="@+id/dislike_iv"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_margin="4dp"
                android:src="@drawable/ic_dislike"/>
    </LinearLayout>

    <View
            android:id="@+id/line_separator"
            android:layout_width="match_parent"
            android:layout_below="@id/like_dislike_section"
            android:layout_height="1.5dp"
            android:background="@drawable/line_separator"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>
</RelativeLayout>
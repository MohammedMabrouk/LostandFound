<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/nav_background"
    android:padding="@dimen/nav_header_padding"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:orientation="vertical"
    android:gravity="bottom">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="@dimen/nav_header_img_width"
        android:layout_height="@dimen/nav_header_img_height"
        android:src="@drawable/dog"
        app:civ_border_width="@dimen/nav_header_img_border"
        app:civ_border_color="@color/white"
        android:layout_marginTop="@dimen/nav_header_element_vertical_margin"
        android:layout_marginBottom="@dimen/nav_header_element_vertical_margin"/>


    <TextView
        android:id="@+id/profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/profile_name_text_size"
        android:fontFamily="sans-serif"
        android:text="Sandra Adams" />

</LinearLayout>